<% content_tag :div, :id => 'title' do %>
  <%= @page.name %>
<% end %>

<% content_tag :div, :id => 'page-content' do %>
  <%= simple_format h(@page.content) %>
<% end %>

<% if logged_in? %>
  <% if @current_user.login === 'admin' %>
    <%= link_to 'Edit', edit_page_path(@page) %> | <%= link_to 'Back', pages_path %>
  <% end %>
<% end %>

