<%= javascript_include_tag :fckeditor %>

<% form_for(@page) do |f| %>
<%= f.error_messages %>

  <% content_tag :p do %>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  <% end %>

  <% content_tag :p do %>
    <%= f.label :permalink %><br />
    <%= f.text_field :permalink %>
  <% end %>

  <% content_tag :p do %>
    <%= f.label :content %><br />
    <%= fckeditor_textarea("page", "content", :toolbarSet => 'Easy', :width => '100%', :height => '200px') %>
    <%#= f.text_area :content, :cols => 80, :rows => 15 %>
  <% end %>

  <% content_tag :p do %>
      <%= f.label :frontend %><br />
      <%= f.check_box :frontend %>
  <% end %>

  <% if action_name == 'new' %>
  <%= f.submit t('bill.create') %>
  <% else %>
  <%= f.submit t('bill.edit') %>
  <% end %>


<% end %>
