<% form_for(@model) do |f| %>
  <%= f.error_messages %>

  <%= t('models.model') %>
  <%= f.text_field :description %>

  <% 2.times do %>
  <br>
  <% end %>
  <%= t('marks.mark') %>
  <div id="quarter" >
    <%= collection_select 'model', 'mark_id', Mark.find(:all, :select => 'name,id', :order => 'name ASC'), 'id', 'name',
        {:prompt => true} %>
  </div>

  <p>
    <% if action_name == 'new' %>
    <%= f.submit  t('common_actions.create') %>
    <% else %>
    <%= f.submit  t('common_actions.edit')  %>
    <% end %>
  </p>
<% end %>
