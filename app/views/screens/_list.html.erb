<% content_tag :table do %>
  <% content_tag :tr do %>
    <%= content_tag('th', t('screens.model')) %>
    <%= content_tag('th', t('screens.sn')) %>
    <%= content_tag('th', t('screens.mark')) %>
    <%= content_tag('th', 'Place') %>
    <%= content_tag('th', t('screens.workstation?')) %>
    <%= content_tag('th', t('screens.inventory_register')) %>
    <%= content_tag('th', t('screens.bill')) %>
    <th colspan='3'><%= t('common-actions.actions') %></th>
  <% end -%>
  <% for screen in @screens %>
   <tr  class="<%= cycle("rowA","rowB") %>">
    <%= content_tag('td', screen.model) %>
    <%= content_tag('td', screen.serialnumber) %>
    <%= content_tag('td', screen.mark.name) rescue nil  %>
    <%= content_tag('td', link_to(screen.place.title, '/places/' + screen.place.id.to_s) ) rescue nil %>
    <%= content_tag('td', in_workstation?(screen, 'screen_id')) rescue nil%>
    <%= content_tag('td', screen.inventory_register) %>
    <%= content_tag('td', link_to(t('screens.bill'), '/bills/'+ screen.bill_id.to_s)) %>
    <%= content_tag('td', link_to(t('common-actions.show'), screen)) %>
    <%= content_tag('td', link_to(t('common-actions.edit'), edit_screen_path(screen))) %>
    <%= content_tag('td', link_to(t('common-actions.destroy'), screen, :confirm => 'Are you sure?', :method => :delete)) %>
   </tr>
   <% end %>
<% end -%>

