<table>
  <tr>
    <th><%= t('screens.model') %></th>
    <th><%= t('screens.sn') %></th>
    <th><%= t('screens.mark') %></th>
    <th>Place</th>
    <th><%= t('screens.workstation?') %></th>
    <th colspan='3'><%= t('common-actions.actions') %></th>
  </tr>
<% for screen in @screens %>
  <tr  class="<%= cycle("rowA","rowB") %>">
    <td><%= screen.model %></td>
    <td><%= screen.serialnumber %></td>
    <td><%= screen.mark.name rescue nil  %></td>
    <td><%= screen.place.title rescue nil %></td>
    <td><%= screen.is_part_of_a_workstation rescue nil %></td>
    <td><%= link_to t('common-actions.show'), screen %></td>
    <td><%= link_to t('common-actions.edit'), edit_screen_path(screen) %></td>
    <td><%= link_to t('common-actions.destroy'), screen, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
