<table>
  <tr>
    <th><%= t('harddisks.model') %></th>
    <th><%= t('harddisks.sn') %></th>
    <th><%= t('harddisks.mark') %></th>
    <th colspan='2'><%= t('harddisks.size') %></th>
    <th>Pc</th>
    <th colspan='3'><%= t('common-actions.actions') %></th>
  </tr>
<% for harddisk in @harddisks %>
  <tr  class="<%= cycle("rowA","rowB") %>">
    <td><%= harddisk.model %></td>
    <td><%= harddisk.serialnumber %></td>
    <td><%= harddisk.mark.name rescue nil  %></td>
    <td><%= harddisk.size rescue nil  %></td>
    <td><%= harddisk.unit.to_s rescue nil  %></td>
    <td><%= link_to(harddisk.computer.name , 'computers/' + harddisk.computer.id.to_s)  rescue nil%></td>
    <td><%= link_to t('common-actions.show'), harddisk %></td>
    <td><%= link_to t('common-actions.edit'), edit_harddisk_path(harddisk) %></td>
    <td><%= link_to t('common-actions.destroy'), harddisk, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
