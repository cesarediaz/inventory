<table>
  <tr>
    <th>Model</th>
    <th>SN</th>
    <th>Computer</th>
    <th colspan='3' align='center' >Actions</th>
  </tr>

<% for harddisk in @harddisks %>
  <tr  class="<%= cycle("rowA","rowB") %>">
    <td><%= harddisk.model %></td>
    <td><%= harddisk.serialnumber %></td>
    <td><%= harddisk.computer.name  rescue nil %></td>
    <td><%= link_to 'Show', harddisk %></td>
    <td><%= link_to 'Edit', edit_harddisk_path(harddisk) %></td>
    <td><%= link_to 'Destroy', harddisk, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

