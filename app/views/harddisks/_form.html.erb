<% form_for(@harddisk) do |f| %>
  <%= f.error_messages %>

  <%= t('harddisks.model') %>
  <%= f.text_field :model %>

    <% 2.times do %>
    <br>
    <%  end %>

  <%= t('harddisks.sn') %>
  <%= f.text_field :serialnumber %>

    <% 2.times do %>
    <br>
    <% end %>

    <%= t('harddisks.inventory_register') %>
    <%= f.text_field :inventory_register %>

    <% 2.times do %>
    <br>
    <%  end %>

  <%= f.label 'size' %>
  <%= f.text_field :size %>
  <% content_tag :div, :id => "quarter" do %>
  <%= select 'harddisk', 'unit', [['mb', 'mb'], ['gb', 'gb']], {:include_blank => true} %>
  <% end -%>

    <% 2.times do %>
    <br>
    <%  end %>

  <div id="quarter" >
  <%= collection_select 'harddisk', 'computer_id', Computer.find(:all), 'id', 'name',
      {:prompt => true} %>
  </div>

    <% 2.times do %>
    <br>
    <%  end %>

  <div id="quarter" >
  <%= collection_select 'harddisk', 'mark_id', Mark.find(:all), 'id', 'name',
      {:prompt => true} %>
  </div>

  <div id="quarter" >
    <%= t 'bill.code' %>
    <%= collection_select 'harddisk', 'bill_id', Bill.find(:all), 'id', :company_bill,
        {:prompt => true} %>
  </div >

  <p>
    <% if action_name == 'new' %>
    <%= f.submit  t('common-actions.create') %>
    <% else %>
    <%= f.submit  t('common-actions.edit')  %>
    <% end %>
  </p>
<% end %>
