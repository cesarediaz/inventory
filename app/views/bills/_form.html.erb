<% form_for(@bill) do |f| %>
  <%= f.error_messages %>

  <% content_tag :div, :id => 'quarter' do %>
  <%= t('bill.company') %>
  <%= collection_select 'bill', 'company_id',
      Company.find(:all, :select => 'name,id', :order => 'name ASC'), 'id', 'name',
      {:prompt => true}  %>
  <% end %>

  <% content_tag :div, :id => 'quarter' do %>
  <%= t('bill.code') %>
  <%= f.text_field :code, :focus => true %>
  <% end %>

  <% content_tag :div, :id => 'ten-percent' do %>
  <%= t('bill.date') %>
  <%= date_select('bill', 'date', :start_year => 1995, :order => [:day, :month, :year]) %>
  <% end %>

  <% if action_name == 'new' %>
  <%= f.submit t('bill.create') %>
  <% else %>
  <%= f.submit t('bill.edit') %>
  <% end %>

<% end %>
