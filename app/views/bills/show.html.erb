<% content_tag :div do %>
  <!-- Company name -->
  <%= content_tag('label', t('bill.company')) %>
  <%= content_tag('b', @bill.company.name) %>

  <!-- Bill code -->
  <%= content_tag('label', t('bill.code')) %>
  <%= content_tag('b', @bill.code) %>

  <!-- Bill code -->
  <%= content_tag('label', t('bill.date')) %>
  <%= content_tag('b', @bill.date.strftime("%d/%m/%Y")) %>
<% end %>


<% 2.times do %>
<%= content_tag('br') %>
<% end %>


<!-- Screens list -->
<%= content_tag('label', t('menu.computers')) %>
<% content_tag :div do %>
<%= content_tag('ul', @bill.computers.collect {|x| x.name + ' ' + x.ip.to_s + '<br>' }) %>
<% end -%>

