<% content_tag :span, :id => 'bill-description' do %>
  <!-- Company name -->
  <%= content_tag('label', t('bill.company')) %>
  <%= content_tag('b', @bill.company.name) rescue nil %>

  <!-- Bill code -->
  <%= content_tag('label', t('bill.code')) %>
  <%= content_tag('b', @bill.code) %>

  <!-- Bill code -->
  <%= content_tag('label', t('bill.date')) %>
  <%= content_tag('b', @bill.date.strftime("%d/%m/%Y")) %>
<% end %>


<% 2.times do %>
<%= content_tag('br') %>
<% end %>


<!-- Computers list -->
<% if @bill.computers.size > 0 %>
  <%= content_tag('label', t('menu.computers'), :id => 'bill-content' ) %>
  <% content_tag :div do %>
    <%= content_tag('ul', @bill.computers.collect {|x| x.name + '<br>' }) %>
  <% end -%>
<% end -%>

<%= show_data(@bill.screens, @bill.screens.size, t('menu.screens')) %>

<%= show_data(@bill.printers, @bill.printers.size, t('menu.printers')) %>

<% if @bill.mother_boards.size > 0 %>
  <%= content_tag('label', t('menu.motherboards'),  :id => "bill-content" ) %>
  <% content_tag :div do %>
    <%= content_tag('ul', @bill.mother_boards.collect {|x| x.title + ' ' + \
        x.mark.name  + ' ' \
        + x.serialnumber.to_s + '<br>' }) %>
  <% end -%>
<% end -%>


<%= show_data(@bill.harddisks, @bill.harddisks.size, t('menu.harddisks')) %>

<%= show_data(@bill.memories, @bill.memories.size, t('menu.memories')) %>

<%= show_data(@bill.cds, @bill.cds.size, t('menu.cds')) %>

<%= show_data(@bill.dvds, @bill.dvds.size, t('menu.dvds')) %>



<%= link_to t('bill.edit'), edit_bill_path(@bill) %> |
<%= link_to t('bill.back'), bills_path %>
