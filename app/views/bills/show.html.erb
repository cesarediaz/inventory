<% content_tag :div do %>
  <!-- Company name -->
  <%= content_tag('label', t('bill.company')) %>
  <%= content_tag('b', @bill.companies.collect {|x| x.name.to_s }) %>

  <!-- Bill code -->
  <%= content_tag('label', t('bill.code')) %>
  <%= content_tag('b', @bill.code) %>
<% end %>


<% 2.times do %>
<%= content_tag('br') %>
<% end %>

