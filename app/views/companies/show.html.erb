
<% content_tag :table do %>
  <% content_tag :tr, option = {:valign => 'top'}  do %>
   <% content_tag :td do %>
<p>
  <b><%= t('company.name') %></b>
  <%=h @company.name %>
</p>

<p>
  <b><%= t('company.address') %></b>
  <%=h @company.complete_address %>
</p>

<p>
  <b><%= t('company.phone') %></b>
  <%=h @company.phone %>
</p>

<p>
  <b><%= t('company.fax') %></b>
  <%=h @company.fax %>
</p>

<p>
  <b><%= t('company.email') %></b>
  <%=h @company.email %>
</p>
   <% end %>
   <% content_tag :td do %>
     <%= Mapstraction.header(:google) %>
     <%= @map.to_html %>
     <%= @map.div(:width => 600, :height => 400) %>
   <% end %>
  <% end %>
 <% end %>

<%= link_to t('common_actions.edit'), edit_company_path(@company) %> |
