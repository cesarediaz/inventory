<% content_tag :table do %>
  <% content_tag :tr do %>
    <%= content_tag('th', t('memories.model')) %>
    <%= content_tag('th', t('memories.sn')) %>
    <%= content_tag('th', t('memories.mark')) %>
    <th colspan='2'><%= t('memories.size') %></th>
    <%= content_tag('th', 'Pc') %>
    <%= content_tag('th', t('memories.bill')) %>
    <th colspan='3'><%= t('common_actions.actions') %></th>
  <% end -%>
<% for memory in @memories %>
  <tr  class="<%= cycle("rowA","rowB") %>">
    <%= content_tag('td', memory.model) %>
    <%= content_tag('td', memory.serialnumber) %>
    <%= content_tag('td', memory.mark.name) rescue nil  %>
    <%= content_tag('td', memory.size) rescue nil  %>
    <%= content_tag('td', memory.unit.to_s) rescue nil  %>
    <%= content_tag('td', link_to(memory.computer.name , 'computers/' + memory.computer.id.to_s))  rescue nil%>
    <%= content_tag('td', link_to(t('memories.bill'), '/bills/'+ memory.bill_id.to_s)) %>
    <%= content_tag('td', link_to(t('common_actions.show'), memory)) %>
    <%= content_tag('td', link_to(t('common_actions.edit'), edit_memory_path(memory))) %>
    <%= content_tag('td', link_to(t('common_actions.destroy'), memory, :confirm => 'Are you sure?', :method => :delete)) %>
  </tr>
<% end %>
<% end -%>
