<% content_tag :table do %>
  <% content_tag :tr do %>
    <%= content_tag('th', t('memories.sn'), options = {:nowrap => true}) %>
    <%= content_tag('th', t('memories.mark') + ' / ' + t('memories.model')) %>
    <%= content_tag('th', t('memories.model')) %>
    <%= content_tag('th', t('memories.size'), options = {:colspan => 2}) %>
    <%= content_tag('th', 'Pc') %>
    <%= content_tag('th', t('memories.bill')) %>
    <%= content_tag('th', t('common_actions.actions'), options = {:colspan => 3}) %>
  <% end -%>
<% for memory in @memories %>
  <tr  class="<%= cycle("rowA","rowB") %>">
    <%= content_tag('td', memory.serialnumber, options = {:nowrap => true}) %>
    <%= content_tag('td', memory.model_id.nil? ? '-' : memory.model.description, options = {:nowrap => true}) %>
    <%= content_tag('td', memory.size, options = {:nowrap => true}) %>
    <%= content_tag('td', memory.unit.to_s, options = {:nowrap => true}) %>
    <%= content_tag('td', memory.computer.nil? ? '-': link_to(memory.computer.name , \
        'computers/' +  memory.computer.id.to_s), options = {:nowrap => true}) %>
    <%= content_tag('td', memory.bill_id.nil? ? '-' : link_to(t('memories.bill'), \
        '/bills/'+ memory.bill_id.to_s)) %>
    <%= content_tag('td', link_to(t('common_actions.show'), memory)) %>
    <%= content_tag('td', link_to(t('common_actions.edit'), edit_memory_path(memory))) %>
    <%= content_tag('td', link_to(t('common_actions.destroy'), memory, :confirm => 'Are you sure?', :method => :delete)) %>
  </tr>
<% end %>
<% end -%>
