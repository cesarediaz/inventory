<table>
  <tr>
    <th>Model</th>
    <th>Serial Number</th>
    <th>Mark</th>
    <th>Pc</th>
    <th colspan='3'>Actions</th>
  </tr>
<% for memory in @memories %>
  <tr  class="<%= cycle("rowA","rowB") %>">
    <td><%= memory.model %></td>
    <td><%= memory.serialnumber %></td>
    <td><%= memory.mark.name rescue nil  %></td>
    <td><%= memory.computer.name rescue nil  %></td>
    <td><%= link_to 'Show', memory %></td>
    <td><%= link_to 'Edit', edit_memory_path(memory) %></td>
    <td><%= link_to 'Destroy', memory, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
