<% cache(:fragment => "computers/_search") do %>
<%= javascript_include_tag :defaults %>

<a href="#" onclick="Effect.toggle('toggle_search', 'appear'); return false;">
  <%= t('common-actions.show-hide') %></a>
<div id='toggle_search' style='border: solid 1px #eee;'  >
  <table>
    <% form_tag :action => 'search' do %>
    <tr>
      <td><label><%= t 'computers.name' %></label></td>
      <td><%= text_field_with_auto_complete :computer, :name, {:size => 20}, {:method => :get} %></td>
      <td><%= submit_tag t 'search.label' %></td>
      <% end %>
    </tr>
    <tr>
      <% form_tag :action => 'search' do %>
      <td><label>Ip:</label></td>
      <td><%= text_field_with_auto_complete :computer, :ip, {:size => 20}, {:method => :get} %></td>
      <td><%= submit_tag t 'search.label' %></td>
      <% end %>
    </tr>
    <tr>
      <% form_tag :action => 'search' do %>
      <td><label>Mac:</label></td>
      <td><%= text_field_with_auto_complete :computer, :mac, {:size => 20}, {:method => :get} %></td>
      <td><%= submit_tag t 'search.label' %></td>
    </tr>
    <% end %>
  </table>
</div>
<% end %>
