<% form_for(@computer) do |f| %>
<fieldset>
  <legend>Data computer</legend>

<%= f.error_messages %>

  <fieldset>
    <legend>Pc data</legend>
    <%= t('computers.name') %>
    <%= f.text_field :name %>

    <%= f.label 'mac' %>
    <%= f.text_field :mac %>

    <%= f.label 'ip' %>
    <%= f.text_field :ip %>
  </fieldset>

  <fieldset>
    <legend><%= t('computers.available') %></legend>
    <%= t('computers.y') %> <%= radio_button('computer', 'available', 't') %>
    <%= t('computers.not') %> <%= radio_button('computer', 'available', 'f') %>
  </fieldset>

  <%= collection_select 'computer', 'place_id', Place.find(:all), 'id', 'title',
      {:prompt => true} %>

  <% if action_name == 'new' %>
  <%= f.submit t('computers.create') %>
  <% else %>
  <%= f.submit t('computers.edit') %>
  <% end %>
</fieldset>

<% end %>
