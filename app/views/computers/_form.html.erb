<% form_for(@computer) do |f| %>
<fieldset>
  <legend>Data computer</legend>

<%= f.error_messages %>

  <fieldset>
    <legend>Pc data</legend>
    <%= f.label 'name' %>
    <%= f.text_field :name %>

    <%= f.label 'mac' %>
    <%= f.text_field :mac %>

    <%= f.label 'ip' %>
    <%= f.text_field :ip %>
  </fieldset>

  <fieldset>
    <legend>Available</legend>
    Yes <%= radio_button('computer', 'available', 't') %>
    Not<%= radio_button('computer', 'available', 'f') %>
  </fieldset>

  <% if action_name == 'new' %>
  <%= f.submit "Create" %>
  <% else %>
  <%= f.submit "Edit" %>
  <% end %>
</fieldset>

<% end %>
