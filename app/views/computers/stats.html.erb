<% cache(:fragment => "computers/_stats") do %>
<%= t('computers.stats_paragraph') %>:

  <% content_tag :div do %>
    <%= link_to t('computers.all'), :controller => "computers", :action => "index" %>
    <%= @availables_computers.count + @unavailables_computers.count %>
  <% end %>

  <% content_tag :div do %>
    <%= link_to t('computers.available').pluralize, :controller => "computers", :action => "available" %>
    <%= @availables_computers.count %>
  <% end %>

  <% content_tag :div do %>
    <%= link_to t('computers.unavailable').pluralize, :controller => "computers", :action => "unavailable" %>
    <%= @unavailables_computers.count %>
  <% end %>


<%  @value = GoogleChart.pie_3d_530x200(@chart).to_url %>
<%= image_tag(@value)  rescue nil %>

<% end %>


