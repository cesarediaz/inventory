<% content_tag :table do %>
  <% content_tag :tr do %>
    <%= content_tag('th', t('printers.model')) %>
    <%= content_tag('th', t('printers.sn')) %>
    <%= content_tag('th', t('printers.mark')) %>
    <%= content_tag('th', 'Place') %>
    <%= content_tag('th', t('printers.workstation?')) %>
    <%= content_tag('th', t('printers.inventory_register')) %>
    <%= content_tag('th', t('screens.bill')) %>
    <th colspan='3'><%= t('common_actions.actions') %></th>
    <% end %>

<% for printer in @printers %>
  <tr  class="<%= cycle("rowA","rowB") %>">
    <%= content_tag('td', printer.model) %>
    <%= content_tag('td', printer.serialnumber) %>
    <%= content_tag('td', printer.mark.name) rescue nil  %>
    <%= content_tag('td', link_to(printer.place.title, '/places/' + printer.place.id.to_s)) rescue nil%>
    <%= content_tag('td', in_workstation?(printer, 'printer_id' )) rescue nil %>
    <%= content_tag('td', printer.inventory_register) %>
    <%= content_tag('td', link_to( t('printers.bill'), '/bills/'+ printer.bill_id.to_s)) %>
    <%= content_tag('td', link_to( t('common_actions.show'), printer)) %>
    <%= content_tag('td', link_to( t('common_actions.edit'), edit_printer_path(printer))) %>
    <%= content_tag('td', link_to(t('common_actions.destroy'), printer, :confirm => 'Are you sure?', :method => :delete)) %>
  </tr>
<% end %>
<% end -%>

