<%= advice( @printer.is_part_of_a_workstation)%>

<% form_for(@printer) do |f| %>
  <%= f.error_messages %>

  <%= t('printers.model') %>
  <%= f.text_field :model %>

  <%= t('printers.sn') %>
  <%= f.text_field :serialnumber %>

  <%= collection_select 'printer', 'mark_id', Mark.find(:all), 'id', 'name',
      {:prompt => true} %>

  <% if not @printer.is_part_of_a_workstation %>
   <%= collection_select 'printer', 'place_id', Place.find(:all), 'id', 'title',
      {:prompt => true} %>
  <% end %>

  <p>
    <% if action_name == 'new' %>
    <%= f.submit  t('common-actions.create') %>
    <% else %>
    <%= f.submit  t('common-actions.edit') %>
    <% end %>
  </p>
<% end %>
