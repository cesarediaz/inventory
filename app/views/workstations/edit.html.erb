<% form_for(@workstation) do |f| %>
<%= f.error_messages %>
<div style="width: 50%;">
  <%= t('phrases.list_of') + t('menu.places') %>
  <%= collection_select(:workstation, :place_id, Place.find(:all, :order => 'title'), :id, :title,{},
    {:prompt => true, :size => Place.all.count + 1 }) %>
</div>

<p>
  <% if action_name == 'new' %>
  <%= f.submit t('workstations.create') %>
  <% else %>
  <%= f.submit t('workstations.edit') %>
  <% end %>
</p>

<% end %>

<%= link_to 'Show', @workstation %> |
<%= link_to 'Back', workstations_path %>
