<% content_tag :table do %>
  <% content_tag :tr do %>
  <%= content_tag('th', t('cds.model')) %>
  <%= content_tag('th', t('cds.sn')) %>
  <%= content_tag('th', t('cds.mark')) %>
  <%= content_tag('th', t('cds.burn')) %>
  <%= content_tag('th', 'Pc') %>
  <%= content_tag('th', t('cds.bill')) %>
  <th colspan='3'><%= t('common-actions.actions') %></th>
  <% end -%>
<% for cd in @cds %>
  <tr  class="<%= cycle("rowA","rowB") %>">
    <%= content_tag('td', cd.model) %>
    <%= content_tag('td', cd.serialnumber) %>
    <%= content_tag('td', cd.mark.name) rescue nil  %>
    <%= content_tag('td', check(cd.writable)) %>
    <%= content_tag('td', link_to(cd.computer.name , 'computers/' + cd.computer.id.to_s))  rescue nil %>
    <%= content_tag('td', link_to(t('cds.bill'), '/bills/'+ cd.bill_id.to_s)) %>
    <%= content_tag('td', link_to(t('common-actions.show'), cd )) %>
    <%= content_tag('td', link_to(t('common-actions.edit'), edit_cd_path(cd))) %>
    <%= content_tag('td', link_to(t('common-actions.destroy'), cd, :confirm => 'Are you sure?', :method => :delete)) %>
  </tr>
<% end %>
<% end -%>
