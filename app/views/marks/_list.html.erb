<% content_tag :table do %>
  <% content_tag :tr do %>
    <%= content_tag('th', t('marks.mark')) %>
    <%= content_tag('th', t('common_actions.actions'), options = {:colspan => 3}) %>
  <% end %>
<% for mark in @marks %>
  <tr  class="<%= cycle("rowA","rowB") %>">
    <%= content_tag('td', mark.name) %>
    <%= content_tag('td', link_to(t('common_actions.show'), mark)) %>
    <td><%= link_to t('common_actions.edit'), edit_mark_path(mark) %></td>
    <td><%= link_to t('common_actions.destroy'), mark, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
<% end %>
