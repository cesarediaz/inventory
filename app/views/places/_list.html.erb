<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Computers</th>
    <th colspan='3'>Actions</th>
  </tr>
<% for place in @places %>
  <tr  class="<%= cycle("rowA","rowB") %>">
    <td><%= link_to place.title, place %></td>
    <td><%= place.description %></td>
    <td><%= place.computer.count %></td>
    <td><%= link_to 'Show', place %></td>
    <td><%= link_to 'Edit', edit_place_path(place) %></td>
    <td><%= link_to 'Destroy', place, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>


<% @options = {:all => 'all',
               :departments => 'departments',
               :offices => 'offices',
               :rooms => 'rooms',
               :stores =>'stores',
               :select =>'select'} %>

<%= select_tag 'sort[]', options_for_select(@options), :include_prompt => true,:onchange => remote_function(:url => {:controller => 'places', :action => 'list'}, :with => "'places='+this.value", :update => "outer") %>
