<% content_tag :div, :class => 'background_loggin' do %>

<% content_tag :table do %>
  <% content_tag :tr do %>
    <% content_tag :td do %>

    <%= flash[:notice] %>

    <%= content_tag('br') %>
    <%= content_tag('br') %>

    <% content_tag :div, :id => 'right-content' do %>

    <% content_tag :div, :id => 'quarter' do %>
    <% form_tag session_path do -%>
