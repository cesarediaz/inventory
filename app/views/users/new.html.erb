<% if logged_in? %>
 <% if current_user.is_admin? %>

  <h4>Sign up as a new user</h4>
  <% @user.password = @user.password_confirmation = nil %>

  <%= error_messages_for :user %>
  <% form_for :user, :url => users_path do |f| -%>
  <p><%= label_tag 'login' %><br/>
  <%= f.text_field :login, :focus => true  %></p>

  <p><%= label_tag 'email' %><br/>
  <%= f.text_field :email %></p>

  <p><%= label_tag 'password', t('user.password') %><br/>
  <%= f.password_field :password %></p>

  <p><%= label_tag 'password_confirmation', t('user.confirm_password') %><br/>
  <%= f.password_field :password_confirmation %></p>

  <div id='quarter'>
    <%= label_tag 'language', t('user.language') %>
    <%= f.select :language, [['English','en'], ['Spanish','es'], ['EspaÃ±ol Argentina','es-AR'], ['French','fr']] %>

    <div class='clear'></div>

    <p>
      <%= f.label :is_admin %><br />
      <%= f.check_box :is_admin %>
    </p>
  </div>

  <p><%= submit_tag 'Sign up' %></p>
 <% end -%>

<% end -%>
<% end -%>
