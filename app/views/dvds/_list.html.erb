<% content_tag :table do %>
  <% content_tag :tr do %>
    <%= content_tag('th', t('dvds.sn'), options = {:nowrap => true}) %>
    <%= content_tag('th', t('dvds.mark') + ' / ' + t('dvds.model'), options = {:nowrap => true}) %>
    <%= content_tag('th', t('dvds.burn')) %>
    <%= content_tag('th', 'Pc') %>
    <%= content_tag('th', t('dvds.bill')) %>
    <%= content_tag('th', t('common_actions.actions'), options = {:colspan => 3}) %>
    <% end -%>
<% for dvd in @dvds %>
  <tr  class="<%= cycle("rowA","rowB") %>">
    <%= content_tag('td', dvd.serialnumber, options = {:nowrap => true} ) %>
    <%= content_tag('td', dvd.model_id.nil? ? '-' : dvd.model.description, options = {:nowrap => true}) %>
    <%= content_tag('td', check(dvd.writable) ) %>
    <%= content_tag('td', dvd.computer.nil? ? '-': link_to(dvd.computer.name , 'computers/' + dvd.computer.id.to_s),
        options = {:nowrap => true})%>
    <%= content_tag('td', dvd.bill_id.nil? ? '-': link_to(t('computers.bill'), '/bills/'+ dvd.bill_id.to_s)) %>
    <%= content_tag('td', link_to(t('common_actions.show'), dvd )) %>
    <%= content_tag('td', link_to(t('common_actions.edit'), edit_dvd_path(dvd))) %>
    <%= content_tag('td', link_to(t('common_actions.destroy'), dvd, :confirm => 'Are you sure?', :method => :delete )) %>
  </tr>
<% end %>
<% end -%>
